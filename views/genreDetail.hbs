<h1>Genre: {{genre.name}}</h1>
<h4>Books</h4>
<div>
  {{#if books}}
  <dl>
    {{#each books}}
    <dt><a href={{this.url}}>{{this.title}}</a></dt>
    <dd>{{this.summary}}</dd>
    {{/each}}
  </dl>
  {{else}}
  <p>There are no books in this genre.</p>
  {{/if}}
</div>
<a href={{concat genre.url '/delete'}} class="text-danger">Delete genre</a>